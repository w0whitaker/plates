<% @images.each do |image| %>
	<div class="item">
		<div class="row">
			<div class="col-xs-12">
	<% if logged_in? %>
		<%= link_to (image_tag((image.plate.url if image.plate?), :class => "img-responsive")), image_path(image.id) %>
		<% else %>
		<%= image_tag((image.plate.url if image.plate?), :class => "img-responsive") %>
	<% end %>
			</div>
		</div>
		<div class="plate-captions">
			<div class="row">
				<div class="col-xs-6">
			<ul>
				<div class="plate-title">
					<li><em><%= image.title %></em></li>
				</div>
				<div class="plate-info">
					<small>
						<li><%= image.date %></li>
						<li><%= image.dims %></li>
						<li><%= image.medium %></li>
					</small>
				</div>
			</ul>
				</div>
				<div class="col-xs-4 col-xs-2 col-xs-offset-2">
					<div class="plate-controls">
						<%= render 'layouts/controls' %>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
