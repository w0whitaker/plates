<% @images.each do |image| %>
	<div class="item">
		<div class="row">
			<div class="col-xs-12">
	<% if logged_in? %>
		<%= link_to (image_tag((image.plate.url if image.plate?), :class => "img-responsive")), image_path(image.id) %>
		<% else %>
		<%= image_tag((image.plate.url if image.plate?), :class => "img-responsive") %>
	<% end %>
			</div>
		</div>
		<div class="plate-captions">
			<div class="row">
				<div class="col-xs-6">
			<ul>
				<li class="plate-title">
					<em><%= image.title %></em>
				</li>
					<li class="plate-info">
						<small>
							<%= image.date %>
						</small>
					</li>
					<li class="plate-info">
						<small>
							<%= image.dims %>
						</small>
					</li>
					<li class="plate-info">
						<small>
							<%= image.medium %>
						</small>
					</li>
			</ul>
				</div>
				<div class="col-xs-4 col-xs-2 col-xs-offset-2">
					<div class="plate-controls">
						<%= render 'layouts/controls' %>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
