<% provide(:title, @image.title) %>
<%= render 'layouts/header' %>
<%= render 'layouts/sidebar' %>
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 text-right">
	<section>
		<%= link_to (image_tag((@image.plate.url if @image.plate?), :class => "img-responsive")), images_path	 %>
		<ul>
			<li><%= @image.title %></li>
			<li><%= @image.date %></li>
			<li><%= @image.dims %></li>
			<li><%= @image.medium %></li>
			<li><%= link_to	'delete', image_path(@image),
											method: :delete,
											data: { confirm: 'Are you sure?' } %>
					<%= link_to 'edit', edit_image_path(@image) %>
			</li>
		</ul>
	</section>
</div>